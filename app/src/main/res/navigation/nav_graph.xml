<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">
    <fragment
        android:id="@+id/listFragment"
        android:name="com.dazn.gallery.ui.ImageList"
        android:label="img_list_frag"
        tools:layout="@layout/fragment_image_list" >
        <action
            android:id="@+id/action_listFragment_to_imageDetails"
            app:destination="@id/imageDetails" />
    </fragment>
    <fragment
        android:id="@+id/imageDetails"
        android:name="com.dazn.gallery.ui.ImageDetails"
        android:label="fragment_image_details"
        tools:layout="@layout/fragment_image_details" >
        <action
            android:id="@+id/action_imageDetails_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
</navigation>